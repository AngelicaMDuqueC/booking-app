---
import Layout from '@/layouts/Layout.astro';
import { BookingPage } from '@/components';

export const prerender = false;
const { id } = Astro.params;
---

<Layout title={`Booking App - Booking ${id}`}>
  <div class='container mx-auto my-8 flex-grow px-4 sm:px-6 lg:px-8'>
    <h1
      class='mb-4 text-4xl font-extrabold leading-none tracking-tight text-gray-900 dark:text-white md:text-5xl lg:text-6xl'
    >
      Fill the form to get your booking
    </h1>
    <BookingPage client:load client:only idRoom={id!} />
  </div>
</Layout>
